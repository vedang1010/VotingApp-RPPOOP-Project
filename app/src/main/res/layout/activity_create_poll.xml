<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/img_5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePollActivity">

    <TextView
        android:id="@+id/questionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="248dp"
        android:text="Election Name:"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/questionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionLabel"
        android:layout_marginTop="34dp"
        android:hint="Enter Election Name"
        android:inputType="text"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/optionsLabel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/questionEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="144dp"
        android:text="Candidates:"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/optionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionsLabel"
        android:orientation="vertical" />

    <Button
        android:id="@+id/addOptionButton"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionsLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="140dp"
        android:background="#09008A"
        android:text="Add Candidate"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/createPollButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/addOptionButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="282dp"
        android:layout_marginEnd="80dp"
        android:background="#09008A"
        android:text="Create Poll"
        android:textColor="@color/white" />

</RelativeLayout>
