<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/img_5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePollActivity">

    <!-- Header TextView -->
    <TextView
        android:id="@+id/questionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Election Name:"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <!-- EditText for entering election name -->
    <EditText
        android:id="@+id/questionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionLabel"
        android:layout_margin="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Enter Election Name"
        android:inputType="text"
        android:minHeight="50dp"
        android:textColorHint="@color/white" />

    <!-- Candidates Label TextView -->
    <TextView
        android:id="@+id/optionsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionEditText"
        android:layout_margin="16dp"
        android:text="Candidates:"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <!-- LinearLayout for options -->
    <LinearLayout
        android:id="@+id/optionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionsLabel"
        android:orientation="vertical"
        android:layout_margin="16dp"/>

    <!-- Add Candidate Button -->
    <Button
        android:id="@+id/addOptionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionsLayout"
        android:layout_margin="16dp"
        android:background="@drawable/button_background"
        android:text="Add Candidate"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_centerHorizontal="true"/>

    <!-- Create Poll Button -->
    <Button
        android:id="@+id/createPollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addOptionButton"
        android:layout_margin="16dp"
        android:background="@drawable/button_background"
        android:text="Create Poll"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
